@model TrabalhoPraticoPWeb1718.Models.ViewModels.InstituicaoAddServicosVM

@{
    ViewBag.Title = "INSTITUIÇÕES - Adicionar Servicos";
}

<h2>@ViewBag.Title</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.OpcaoServicos, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.OpcaoServicos, Model.ListaServicos, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.OpcaoServicos, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Adicionar Serviço" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar a INSTITUIÇÕES Adicionar Serviços", "ListaServicos")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
